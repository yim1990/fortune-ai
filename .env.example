# Fortune AI 개발환경 설정
# 이 파일을 .env로 복사하여 사용하세요: cp .env.example .env

# ===========================================
# 공통 환경 설정
# ===========================================

# 타임존 설정
TZ=Asia/Seoul

# 애플리케이션 환경
NODE_ENV=development
APP_ENV=development
APP_DEBUG=true

# ===========================================
# 웹 서버 설정
# ===========================================

# Next.js 웹 서버 포트
WEB_PORT=3000

# PHP API 서버 URL (컨테이너 내부 통신)
PHP_API_URL=http://php-api:8080

# ===========================================
# PHP API 서버 설정
# ===========================================

# PHP API 서버 포트 (내부 전용)
PHP_API_PORT=8080

# OpenAI API 키 (실제 키로 교체 필요)
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# 데이터베이스 설정 (필요시)
# ===========================================

# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=fortune_ai
# DB_USERNAME=root
# DB_PASSWORD=password

# ===========================================
# Redis 설정 (캐싱용, 필요시)
# ===========================================

# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ===========================================
# 보안 설정
# ===========================================

# 애플리케이션 키
APP_KEY=your_app_key_here

# JWT 시크릿
JWT_SECRET=your_jwt_secret_here

# ===========================================
# 로깅 설정
# ===========================================

LOG_LEVEL=debug
LOG_FILE=/var/log/fortune-ai/api.log